@{ 
    Layout = "/Views/Shared/_Layout.cshtml";
}
<div class="container-onePageBody">
    <div class="container-account ">
        <div class="card">
            <div class="card-header">
                <ul class="nav nav-tabs card-header-tabs">
                    <li class="nav-item">
                        <a href='/Identity/Account/Login' class="nav-link">Войти</a>
                    </li>
                    <li class="nav-item">
                        <a href='/Identity/Account/Register' class="nav-link">Регистрация</a>
                    </li>
                </ul>
            </div>
            <div class="card-body">
                @RenderBody()
            </div>
        </div>
    </div>
</div>
   

@section Scripts{
    @RenderSection("Scripts", required:false)
 

<script>
    $(function () {
        var current = location.pathname;
        $('.nav-tabs li a').each(function () {
            var $this = $(this);
            if (current.indexOf($this.attr('href')) !== -1) {
                $this.addClass('active');
            }
        })
    })
</script>
}