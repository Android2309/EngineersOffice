@using Microsoft.AspNetCore.Identity
@using EngineersOffice_Site.Areas.Identity.Data

@inject SignInManager<EngineersOfficeUser> SignInManager
@inject UserManager<EngineersOfficeUser> UserManager

<ul class="navbar-nav header-login-out">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="header-login-out-item">
            <a id="manage" class="hover-engineer_orange-color focus-engineer_green-outline" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                Личный кабинет: @UserManager.GetUserName(User)
            </a>
        </li>
        <li class="header-login-out-item">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="hover-engineer_orange-color header-login-out-button  btn">
                    Выход
                    <div class="header-logout-icon ">
                        <i class="fas fa-window-close fa-1x"></i>
                    </div>
                </button>

            </form>
        </li>
    }
    else
    {
        <li class="header-login-out-item">
            <a class="hover-engineer_orange-color focus-engineer_green-outline" id="register" asp-area="Identity" asp-page="/Account/Register">Регистрация</a>
        </li>
        <li class="header-login-out-item">
            <a class="hover-engineer_orange-color focus-engineer_green-outline header-login-in-button" id="login" asp-area="Identity" asp-page="/Account/Login">
                Войти
                <div class="header-login-icon ">
                    <i class="fas fa-arrow-right fa-1x"></i>
                </div>
            </a>
        </li>
    }
</ul>
